<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content" 
  android:background="@drawable/background_activated"
   >
  
  <TextView android:id="@+id/event_list_item_titleTextView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    
    android:textSize="20sp"
    android:textColor="@color/btn_bg"
    android:textStyle="bold"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:text="Event title" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_below="@id/event_list_item_titleTextView"
      android:weightSum="3" >

  <TextView android:id="@+id/event_list_item_dateTextView"
      android:layout_weight="1"
      android:fontFamily="sans-serif-light"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/event_list_item_titleTextView"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:textSize="15sp"
    android:paddingTop="4dp"
    android:text="Event date" />

  <TextView
      android:id="@+id/event_list_item_enddateTextView"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_below="@+id/event_list_item_titleTextView"
      android:layout_weight="1"
      android:fontFamily="sans-serif-light"
      android:paddingLeft="4dp"
      android:paddingRight="4dp"
      android:paddingTop="4dp"
      android:text="Event End date"
      android:textSize="15sp" />
  
  <TextView
      android:id="@+id/event_list_item_zipView"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_below="@+id/event_list_item_titleTextView"
      android:layout_weight="1"
      android:fontFamily="sans-serif-light"
      android:paddingLeft="4dp"
      android:paddingRight="4dp"
      android:paddingTop="4dp"
      android:text="Zip Code"
      android:textSize="15sp" />
  </LinearLayout>

</RelativeLayout>